{
  "name": "xchat-extension",
  "displayName": "Xchat",
  "version": "0.0.1",
  "description": "xchat MVP version",
  "author": "Gray <grayjiang0228@gmail.com>",
  "contributors": [
    "gray"
  ],
  "private": true,
  "scripts": {
    "prepare": "husky",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "postinstall": "echo 'please use npm run setup to finish the project configure' || true",
    "start": "next start",
    "dev": "run-p dev:*",
    "dev:plasmo": "plasmo dev",
    "dev:next": "next dev --port 1947",
    "build": "run-p build:*",
    "build:plasmo": "plasmo build",
    "build:next": "next build",
    "lint": "next lint",
    "eslint-fix": "eslint --ext .jsx,.js,.ts,.tsx,.vue src/ --fix"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@tanstack/react-query": "^5.62.7",
    "@tanstack/react-query-devtools": "^5.62.7",
    "@tanstack/react-virtual": "^3.10.7",
    "@wagmi/core": "^2.13.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "ethers": "^6.13.2",
    "google-protobuf": "^3.21.4",
    "grpc-web": "^1.5.0",
    "next": "14.2.5",
    "next-themes": "^0.3.0",
    "plasmo": "0.88.0",
    "react": "^18",
    "react-dom": "^18",
    "siwe": "^2.3.2",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^10.0.0",
    "viem": "^2.18.2",
    "wagmi": "^2.12.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@plasmohq/rps": "1.8.7",
    "@plasmohq/storage": "1.11.0",
    "@types/chrome": "^0.0.269",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.1.0",
    "husky": "^9.1.7",
    "postcss": "^8",
    "tailwindcss": "^3.4.16",
    "typescript": "^5",
    "url-loader": "^4.1.1"
  },
  "manifest": {
    "background": {
      "service_worker": "src/background.ts"
    },
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs",
      "storage"
    ]
  }
}
